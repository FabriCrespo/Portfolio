---
const personalImageAlt = "Fabricio Crespo"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import SocialPill from "@/components/SocialPill.astro"
import { t } from "../utils/i18n"
const imagePath = "https://raw.githubusercontent.com/FabriCrespo/glucolog/main/screenshots/pfp.png"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src={imagePath}
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/fabricio-crespo-552412256/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Open to Work</Badge>
    </a>
  </div>
  <h1
    id="hero-title"
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    {t('hero.title')}
  </h1>
  <p
    id="hero-description"
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
    set:html={t('hero.description')}
  />
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:fabrinephi04@gmail.com">
      <MailIcon class="size-4" />
      <span id="hero-contact">{t('hero.contact')}</span>
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/fabricio-crespo-552412256/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>

<script>
  import { t } from "../utils/i18n"

  const updateHeroText = () => {
    const title = document.getElementById('hero-title')
    const description = document.getElementById('hero-description')
    const contact = document.getElementById('hero-contact')

    if (title) title.textContent = t('hero.title')
    if (description) description.innerHTML = t('hero.description')
    if (contact) contact.textContent = t('hero.contact')
  }

  // Actualizar cuando cambia el idioma
  window.addEventListener('storage', (e) => {
    if (e.key === 'language') {
      updateHeroText()
    }
  })

  // Actualizar cuando se carga la pÃ¡gina
  document.addEventListener('astro:page-load', () => {
    updateHeroText()
  })
</script>
